<?xml version="1.0" encoding="UTF-8"?>

<!-- Root layout is AnchorPane to allow flexible anchoring of child nodes -->
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            minHeight="-Infinity" minWidth="-Infinity"
            stylesheets="@../../css/main.css"
            fx:controller="view.ui.HomeViewImpl">

    <!-- Main vertical layout -->
    <VBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Header: Dashboard title -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Dashboard" styleClass="dashboard-title">
                <HBox.margin>
                    <Insets top="16.0"/>
                </HBox.margin>
            </Label>
        </HBox>

        <!-- GridPane for quick overview cards: Users, Projects, Teams -->
        <GridPane hgap="20" vgap="20" VBox.vgrow="ALWAYS">

            <!-- USERS CARD -->
            <StackPane prefHeight="140" prefWidth="220"
                       style="-fx-background-color: white; -fx-background-radius: 10;
                              -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);"
                       GridPane.columnIndex="0" GridPane.rowIndex="0">
                <VBox spacing="5">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                    <!-- Label for card title -->
                    <Label text="Users" style="-fx-font-size: 14px; -fx-text-fill: gray;"/>
                    <!-- Label to show user count dynamically -->
                    <Label fx:id="lblUsersCount" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <!-- Button to navigate to Users view -->
                    <Button fx:id="btnViewUsers" text="View Users" maxWidth="Infinity" styleClass="btn-primary"/>
                </VBox>
            </StackPane>

            <!-- PROJECTS CARD -->
            <StackPane prefHeight="140" prefWidth="220"
                       style="-fx-background-color: white; -fx-background-radius: 10;
                              -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);"
                       GridPane.columnIndex="1" GridPane.rowIndex="0">
                <VBox spacing="5">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                    <Label text="Projects" style="-fx-font-size: 14px; -fx-text-fill: gray;"/>
                    <Label fx:id="lblProjectsCount" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Button fx:id="btnViewProjects" text="View Projects" maxWidth="Infinity" styleClass="btn-primary"/>
                </VBox>
            </StackPane>

            <!-- TEAMS CARD -->
            <StackPane prefHeight="140" prefWidth="220"
                       style="-fx-background-color: white; -fx-background-radius: 10;
                              -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);"
                       GridPane.columnIndex="2" GridPane.rowIndex="0">
                <VBox spacing="5">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                    <Label text="Teams" style="-fx-font-size: 14px; -fx-text-fill: gray;"/>
                    <Label fx:id="lblTeamsCount" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Button fx:id="btnViewTeams" text="View Teams" maxWidth="Infinity" styleClass="btn-primary"/>
                </VBox>
            </StackPane>

            <!-- Column and Row Constraints for GridPane -->
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

        </GridPane>

        <!-- Footer note below cards -->
        <HBox spacing="20" styleClass="project-footer">
            <Label styleClass="project-footer-label" text="Quick overview of your system">
                <padding>
                    <Insets bottom="15.0"/>
                </padding>
            </Label>
        </HBox>

        <!-- Outer padding for VBox -->
        <padding>
            <Insets left="30.0" right="30.0"/>
        </padding>

    </VBox>
</AnchorPane>
