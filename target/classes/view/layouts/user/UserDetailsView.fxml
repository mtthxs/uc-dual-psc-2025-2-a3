<?xml version="1.0" encoding="UTF-8"?>

<!-- Main container -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.ui.user.UserDetailsViewImpl"
      spacing="0"
      prefWidth="500.0">

    <!-- Header -->
    <StackPane minHeight="70.0" prefHeight="70.0" style="-fx-background-color: #0672cf;">
        <Text strokeType="OUTSIDE" strokeWidth="0.0"
              style="-fx-font-size: 25px; -fx-fill: white;"
              text="User Details"/>
    </StackPane>

    <!-- User info grid -->
    <GridPane hgap="10" vgap="15">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <columnConstraints>
            <ColumnConstraints percentWidth="30"/> <!-- Label column -->
            <ColumnConstraints percentWidth="70"/> <!-- Value column -->
        </columnConstraints>

        <!-- User properties -->
        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="fullNameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="emailLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Role:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="roleLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Action buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10"/>
        </padding>
        <Button fx:id="closeButton" text="Close"/>
        <Button fx:id="deleteButton" text="Delete"
                style="-fx-background-color: #d9534f; -fx-text-fill: white;"/>
    </HBox>
</VBox>

