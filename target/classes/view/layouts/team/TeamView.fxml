<?xml version="1.0" encoding="UTF-8"?>

<!-- Main container for Team Module -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane minHeight="-Infinity" minWidth="-Infinity"
            stylesheets="@../../../css/main.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.ui.team.TeamViewImpl">

    <VBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Header with title and New Team button -->
        <HBox alignment="BASELINE_RIGHT" spacing="20">
            <!-- Dashboard title -->
            <Label styleClass="dashboard-title" text="Teams">
                <HBox.margin>
                    <Insets top="16.0"/>
                </HBox.margin>
            </Label>

            <!-- Spacer to push button to the right -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- New Team Button -->
            <StackPane alignment="CENTER_LEFT">
                <Button fx:id="newTeamButton" styleClass="btn-primary" text="New Team"/>
                <StackPane.margin>
                    <Insets top="24.0"/>
                </StackPane.margin>
            </StackPane>
        </HBox>

        <!-- Grid for displaying team cards -->
        <GridPane fx:id="teamGrid" hgap="20" vgap="20" VBox.vgrow="ALWAYS"/>
        <!-- The controller dynamically populates this GridPane with team cards -->

        <!-- Footer: instruction label -->
        <HBox spacing="20" styleClass="project-footer">
            <Label styleClass="project-footer-label" text="Select a team to view details">
                <padding>
                    <Insets bottom="15.0"/>
                </padding>
            </Label>
        </HBox>

        <!-- VBox padding to maintain spacing from edges -->
        <padding>
            <Insets left="30.0" right="30.0"/>
        </padding>
    </VBox>
</AnchorPane>
