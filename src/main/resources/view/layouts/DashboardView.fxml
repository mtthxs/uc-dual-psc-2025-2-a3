<?xml version="1.0" encoding="UTF-8"?>

<!-- Root layout is a BorderPane: left = sidebar menu, center = dynamic content area -->
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="605.0" prefWidth="1073.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.ui.DashboardViewImpl"
            stylesheets="@/css/main.css">

    <!-- LEFT SIDE: Sidebar Menu -->
    <left>
        <Pane prefHeight="605.0" prefWidth="211.0" style="-fx-background-color: #0672cf;" BorderPane.alignment="CENTER">

            <!-- Include user header (avatar, name, role) -->
            <fx:include source="user/UserHeader.fxml"/>

            <!-- Menu container -->
            <VBox fx:id="menuContainer" layoutX="-1.0" layoutY="198.0" prefHeight="287.0" prefWidth="211.0"
                  VBox.vgrow="ALWAYS">

                <!-- Menu title -->
                <Label style="-fx-font-weight: 700; -fx-text-fill: white; -fx-padding: 0px 0px 12px 12px;" text="MENU"/>

                <!-- DASHBOARD MENU ITEM -->
                <HBox alignment="CENTER_LEFT" userData="dashboard" onMouseClicked="#loadViewFromMenu"
                      prefHeight="50.0" prefWidth="200.0" spacing="12.0"
                      style="-fx-padding: 12px;" styleClass="select-menu">
                    <!-- Icon -->
                    <SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"
                             styleClass="menu-icon"/>
                    <!-- Menu text -->
                    <Label text="Dashboard" styleClass="menu-label"/>
                </HBox>

                <!-- PROJECTS MENU ITEM -->
                <HBox alignment="CENTER_LEFT" userData="projects" onMouseClicked="#loadViewFromMenu"
                      prefHeight="50.0" prefWidth="200.0" spacing="12.0"
                      style="-fx-padding: 12px;" styleClass="hover-menu">
                    <SVGPath
                            content="M10 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z"
                            styleClass="menu-icon"/>
                    <Label text="Projects" styleClass="menu-label"/>
                </HBox>

                <!-- TEAMS MENU ITEM -->
                <HBox alignment="CENTER_LEFT" userData="teams" onMouseClicked="#loadViewFromMenu"
                      prefHeight="50.0" prefWidth="200.0" spacing="12.0"
                      style="-fx-padding: 12px;" styleClass="hover-menu">
                    <SVGPath
                            content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zM8 17.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5zM9.5 8c0-1.38 1.12-2.5 2.5-2.5s2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5S9.5 9.38 9.5 8zm6.5 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                            styleClass="menu-icon"/>
                    <Label text="Teams" styleClass="menu-label"/>
                </HBox>

                <!-- USERS MENU ITEM -->
                <HBox alignment="CENTER_LEFT" userData="users" onMouseClicked="#loadViewFromMenu"
                      prefHeight="50.0" prefWidth="200.0" spacing="12.0"
                      style="-fx-padding: 12px;" styleClass="hover-menu">
                    <SVGPath
                            content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                            styleClass="menu-icon"/>
                    <Label text="Users" styleClass="menu-label"/>
                </HBox>

                <!-- Spacer to push footer labels to the bottom -->
                <Region VBox.vgrow="ALWAYS"/>

                <!-- Footer: version info -->
                <Label text="v1.0"
                       style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14px; -fx-alignment: center;"
                       maxWidth="Infinity"
                       alignment="CENTER"/>
                <Label text="uc-dual-psc-2025-2-a3"
                       style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14px; -fx-alignment: center;"
                       maxWidth="Infinity"
                       alignment="CENTER"/>
            </VBox>
        </Pane>
    </left>

    <!-- CENTER: Dynamic content area -->
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <!-- Content loaded dynamically depending on menu selection -->
            <StackPane fx:id="contentArea" VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>
</BorderPane>
