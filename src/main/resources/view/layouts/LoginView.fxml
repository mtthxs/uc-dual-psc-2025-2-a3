<?xml version="1.0" encoding="UTF-8"?>

<!-- Root layout: BorderPane to split the view into left (branding) and right (login form) sections -->
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.ui.LoginViewImpl">

    <!-- LEFT PANEL: Branding -->
    <left>
        <Pane prefHeight="200.0" prefWidth="200.0"
              style="-fx-background-color: #0672cf;"
              BorderPane.alignment="CENTER">
            <!-- Application title -->
            <Label alignment="TOP_LEFT"
                   layoutX="14.0" layoutY="14.0"
                   prefHeight="150" prefWidth="166.0"
                   style="-fx-font-size: 24; -fx-font-weight: 700; -fx-text-fill: white;"
                   text="Project Management System"
                   textOverrun="CLIP"
                   wrapText="true"/>
        </Pane>
    </left>

    <!-- RIGHT PANEL: Login Form -->
    <right>
        <Pane prefHeight="400.0" prefWidth="400.0"
              BorderPane.alignment="CENTER">

            <!-- Username input field -->
            <TextField fx:id="loginField"
                       layoutX="86.0" layoutY="168.0"
                       prefHeight="40.0" prefWidth="229.0"
                       promptText="Username"
                       style="-fx-padding: 12px;"/>

            <!-- Password input field -->
            <PasswordField fx:id="passwordField"
                           layoutX="86.0" layoutY="220.0"
                           prefHeight="40.0" prefWidth="229.0"
                           promptText="Password"
                           style="-fx-padding: 12px;"/>

            <!-- Welcome label -->
            <Label alignment="CENTER" contentDisplay="CENTER"
                   layoutX="128.0" layoutY="101.0"
                   prefHeight="43.0" prefWidth="145.0"
                   text="Welcome">
                <font>
                    <Font name="System Bold" size="29.0"/>
                </font>
            </Label>

            <!-- Login button -->
            <Button layoutX="129.0" layoutY="302.0"
                    mnemonicParsing="false"
                    onAction="#handleLogin"
                    prefHeight="47.0" prefWidth="142.0"
                    style="-fx-background-color: #0672cf; -fx-text-fill: white; -fx-font-weight: 700; -fx-font-size: 18;"
                    text="Login"/> <!-- Calls handleLogin() in LoginViewImpl controller -->

            <!-- Decorative lock icon using SVGPath -->
            <SVGPath
                    content="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"
                    layoutX="188.0" layoutY="40.0"
                    scaleX="1.5" scaleY="1.5"
                    style="-fx-translate-y: 2px;"/>
        </Pane>
    </right>

</BorderPane>
