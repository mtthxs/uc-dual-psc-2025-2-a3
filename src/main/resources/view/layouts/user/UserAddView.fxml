<?xml version="1.0" encoding="UTF-8"?>

<!-- Main container -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox prefWidth="400.0" xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.ui.user.UserAddViewImpl"
      spacing="0">

    <!-- Header -->
    <StackPane minHeight="70.0" prefHeight="70.0" style="-fx-background-color: #0672cf;">
        <Text strokeType="OUTSIDE" strokeWidth="0.0"
              style="-fx-font-size: 25px; -fx-fill: white;"
              text="User Registration"/>
    </StackPane>

    <!-- Scrollable form content -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Form grid -->
            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/> <!-- Label column -->
                    <ColumnConstraints percentWidth="70"/> <!-- Input field column -->
                </columnConstraints>

                <!-- User fields -->
                <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="fullNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="CPF:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="cpfField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Login:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="loginField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Password:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Role:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="roleComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Form buttons -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Cancel" fx:id="cancelButton"/>
                <Button text="Save" fx:id="saveButton"/>
            </HBox>
        </VBox>
    </ScrollPane>
</VBox>
